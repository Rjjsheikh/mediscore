class MediScoreCalculator:
    def __init__(self, oxygen, consciousness, respiration_rate, spo2, temperature):
        self.oxygen = oxygen
        self.consciousness = consciousness
        self.respiration_rate = respiration_rate
        self.spo2 = spo2
        self.temperature = round(temperature, 1)  # Round to 1 decimal place as per requirements

    def calculate_score(self):
        score = 0

        # Oxygen dependency
        score += self.oxygen  # 0 for air, 2 for oxygen

        # Consciousness level
        if self.consciousness != 0:
            score += 3  # Non-zero means CVPU (confused, voice, pain, unresponsive)

        # Respiration rate scoring
        if self.respiration_rate <= 8:
            score += 3
        elif 9 <= self.respiration_rate <= 11:
            score += 1
        elif 21 <= self.respiration_rate <= 24:
            score += 2
        elif self.respiration_rate >= 25:
            score += 3

        # SpO2 scoring
        if self.spo2 <= 83:
            score += 3
        elif 84 <= self.spo2 <= 85:
            score += 2
        elif 86 <= self.spo2 <= 87:
            score += 1
        elif self.oxygen == 2:
            if 93 <= self.spo2 <= 94:
                score += 1
            elif 95 <= self.spo2 <= 96:
                score += 2
            elif self.spo2 >= 97:
                score += 3

        # Temperature scoring
        if self.temperature <= 35.0:
            score += 3
        elif 35.1 <= self.temperature <= 36.0:
            score += 1
        elif 38.1 <= self.temperature <= 39.0:
            score += 1
        elif self.temperature >= 39.1:
            score += 2

        return score

# User input section
patients = []
n = int(input("Enter the number of patients: "))

for i in range(n):
    print(f"\nEnter details for patient {i + 1}:")
    oxygen = int(input("Is the patient on oxygen? (0 for air, 2 for oxygen): "))
    consciousness = int(input("Enter consciousness level (0 for alert, non-zero for CVPU): "))
    respiration_rate = int(input("Enter respiration rate (per minute): "))
    spo2 = int(input("Enter SpO2 (oxygen saturation percentage): "))
    temperature = float(input("Enter temperature (in Celsius): "))
    
    patient = MediScoreCalculator(oxygen, consciousness, respiration_rate, spo2, temperature)
    patients.append(patient)

# Displaying results
print("\nPatient Medi Scores:")
for i, patient in enumerate(patients):
    score = patient.calculate_score()
    print(f"Patient {i + 1}: Medi Score = {score}")

